CC=gcc
CFLAGS=-Wall -Werror -Wextra -pedantic
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -f

all:$(NAME)
	@echo "$(CC) $(OBJ) -o $(NAME)"

$(NAME):$(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o:%.c
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(CC) $(CFLAGS) -c -o $@ $<"

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:clean oclean

re:oclean all
